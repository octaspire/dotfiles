[user]
	email = octaspire@octaspire.com
	name  = octaspire
	signingkey = 9BD2CCD560E9E29C
[core]
	editor = emacsclient
        autocrlf = input     # Use 'input' in UNIX, 'true' in Windows.
[push]
	default = simple
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	root = rev-parse --show-toplevel
[color]
        diff   = always
        status = always
        branch = always
        ui     = always
[commit]
	gpgsign = true
[gpg]
	program = gpg2
[init]
	defaultBranch = main
